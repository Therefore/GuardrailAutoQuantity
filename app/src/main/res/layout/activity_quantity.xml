<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff303030"
    tools:context="com.traffic.apptech.guardrailautoquantity.QuantityActivity">

<LinearLayout
    android:id="@+id/layout_header"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:visibility="gone"
        android:id="@+id/spinner_guardrailItems"
        android:entries="@array/install_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </Spinner>
<LinearLayout

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/white"
        android:background="@color/orange"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Site #1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:background="@color/orange"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/text_install"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:id="@+id/text_remove"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
        android:background="@color/orange"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_install"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_remove"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/layout_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ListView
                android:longClickable="true"
                android:id="@+id/list_install"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>

           <!-- <Space
                android:layout_weight=".15"
                android:background="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" /> -->

            <ListView
                android:longClickable="true"
                android:id="@+id/list_remove"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ListView>

            </LinearLayout>
        <Button
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:text="Next Site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
